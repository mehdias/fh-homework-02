
<h1> All Books</h1><br/>
<%= form_tag books_path, method: 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Genre</th>
      <th>Classification</th>
      <th>Catagory</th>
      <th>Year</th>
    </tr>
  </thead>

<tbody>
  <% @books.each do |book| %>
    <tr>


    <td><%= book.title %></td>
    <td><%= book.author %></td>
    <td><%= book.genre %></td>
    <td><%= book.classification %></td>
    <td><%= book.catagory %></td>
    <td><%= book.year %></td>
    <td><%= link_to 'Show', book_path(book) %></td>
    <td><%= link_to 'Edit', edit_book_path(:id) %> </td>
    <td><%= link_to 'Destroy', '#', method: :delete, data: {confirm: 'Are you sure you want to delete?'} %> </td>
  </tr>

<% end %>
</tbody>
</table>
<br/>
<%= link_to 'Add a New Book', new_book_path %>