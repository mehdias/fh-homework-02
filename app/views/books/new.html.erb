<%= form_for @book do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <br /><br />
  <%= f.label :sub_title %>
  <%= f.text_field :sub_title %>
  <br /><br />

  <%= f.label :genre %>
  <%= f.text_field :genre %>

  <br /><br />

  <%= f.label :classification %>
  <%= f.select :classification, ['Philosophy', 'History', 'Social Sciences', 'Fine Arts', 'language and literature', 'medicine', 'technology', 'Education'], prompt: 'Select One' %>

  <br /><br />

  <%= f.label :catagory %>
  <%= f.select :catagory, ['Fiction', 'NonFiction'], prompt: 'Select One'%>

  <br /><br />

  <%= f.label :year %>
  <%= f.select :year, (2000..2018).to_a, prompt: 'Select Year' %>

  <br /><br />

  <%= f.submit 'Create' %>
<% end %>

<%= link_to 'Back', root_path %>